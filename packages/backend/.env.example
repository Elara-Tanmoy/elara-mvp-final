# ==============================================================================
# ELARA PLATFORM - ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials to version control!
#
# For production: Use GCP Secret Manager instead of environment variables
# See: docs/SECRETS_MANAGEMENT.md
# ==============================================================================

# Environment
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# GCP Configuration
GCP_PROJECT_ID=elara-mvp-13082025-u1
USE_SECRET_MANAGER=false

# Database (production uses GCP Secret Manager)
DATABASE_URL=postgresql://user:password@localhost:5432/elara_dev

# Redis (production uses GCP Secret Manager)
REDIS_URL=redis://localhost:6379

# JWT Secrets (production uses GCP Secret Manager)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here-change-in-production

# AI API Keys (production uses GCP Secret Manager)
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GEMINI_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# OAuth (production uses GCP Secret Manager)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-XXXXXXXXXXXXXXXXXXXXXXXX
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# External APIs (production uses GCP Secret Manager)
VIRUSTOTAL_API_KEY=your-virustotal-api-key
GOOGLE_SAFE_BROWSING_KEY=your-google-safe-browsing-key

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
